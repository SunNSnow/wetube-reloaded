extends ../templates/base

block content 
  h4 Update Video
  form(method="POST") 
    input(placeholder="Title", value=video.title, required, type="text" name="title")
    input(placeholder="Description", value=video.description, required, type="text", name="description")
    input(placeholder="Hashtags, seperate with comma", value=video.hashtags.join(), required, type="text", name="hashtags")
    input(type="submit", value="Save")